<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="13dp">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/pf_teacher" />

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toEndOf="@+id/iv_profile"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="-10dp">

        <ImageView
            android:id="@+id/iv_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_barcode"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/extralight"
            android:gravity="center"
            android:textSize="16dp"
            android:visibility="invisible" />

        <RatingBar
            android:id="@+id/rb_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/unho"
            android:secondaryProgressTint="@color/zxing_transparent"
            android:stepSize="0.1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rb_rating"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/semibold"
            android:gravity="center"
            android:textSize="18dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="2dp"
        android:background="@color/light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:background="@color/zxing_transparent"
            android:fontFamily="@font/bold"
            android:text="\u003c"
            android:textColor="@color/light"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:background="@color/zxing_transparent"
            android:fontFamily="@font/bold"
            android:text="\u003e"
            android:textColor="@color/light"
            android:textSize="23dp" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_meals"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/zxing_transparent"
            android:fontFamily="@font/semibold"
            android:text="석식"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <Button
            android:id="@+id/btn_rate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/zxing_transparent"
            android:fontFamily="@font/semibold"
            android:text="설문"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <Button
            android:id="@+id/btn_ranking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/zxing_transparent"
            android:fontFamily="@font/semibold"
            android:text="순위"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/zxing_transparent"
            android:fontFamily="@font/semibold"
            android:text="설정"
            android:textColor="@color/black"
            android:textSize="23sp" />
    </LinearLayout>
</LinearLayout>